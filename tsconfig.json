{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"noImplicitReturns": true,
		"inlineSourceMap": true,
		"types": [
			"node"
		],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": [
		"src/**/*",
		"test/**/*"
	]
}